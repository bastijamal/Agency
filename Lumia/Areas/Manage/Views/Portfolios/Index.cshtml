@model List<Portfolios>

@{
    var count = 0;

}
<div class="container">


    <table class="table">

        <a class="btn btn-primary" asp-action="Create">Create</a>

        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Photo</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td><img src="~/upload/@item.PhotoUrl" style="width:100px" /></td>

                    <td>
                        <a class="btn btn-secondary" asp-action="Update" asp-route-id="@item.id">Update</a>
                        <a class="btn btn-danger" asp-route-id="@item.id" asp-action="Delete">Delete</a>
                    </td>

                </tr>
            }


        </tbody>
    </table>

</div>

